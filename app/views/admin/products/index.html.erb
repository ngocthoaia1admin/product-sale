<section id="products-index" class="row-fluid">
  <h1 class="page-title"><%= t ".title" %></h1>
  <div class="actions">
    <%= link_to(t(".add"), new_admin_product_path, class: :btn) %>
  </div>
  <table class="table table-bordered table-striped">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Product line</th>
      <th></th>
      <th></th>
    </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.product_line %></td>
      <td><%= link_to t(".edit"), edit_admin_product_path(product) %></td>
      <td><%= link_to "Destroy", admin_product_path(product), method: :delete,
        data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
  </table>
</section>
